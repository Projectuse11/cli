<div class="test">
  <h1>{{ page_title }}</h1>
  <h2>{{ section.settings.text-box }}</h2>
  <a href="{{ section.settings.link }}">
    {{ section.settings.linktext }}
  </a>

</div>
{% style %}
  .test {
    padding: 50px;
  }
{% endstyle %}
{% schema %}
  {
    "name": "Call to Action",
    "settings": [
      {
        "id": "text-box",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      }, {
        "id": "link",
        "type": "url",
        "label": "Link URL"
      }, {
        "id": "linktext",
        "type": "text",
        "label": "Link Text",
        "default": "Click Me"
      }
    ],
    "presets": [
      {
        "name": "Call to Action",
        "category": "Promotional"
      }
    ]
  }
{% endschema %}